<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>ProductDiscount</servlet-name>
        <servlet-class>com.codegym.model.ProductDiscount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDiscount</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayDiscount</servlet-name>
        <servlet-class>com.codegym.view.DisplayDiscount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayDiscount</servlet-name>
        <url-pattern>/display</url-pattern>
    </servlet-mapping>
</web-app>
